<div id="carousel<%= id %>Controls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="d-block w-100">
        <%= pages[0] %>
      </div>
    </div>
    <% if pages.length > 1 %>
      <% (1..pages.length - 1).each do |i| %>
        <div class="carousel-item">
          <div class="d-block w-100">
            <%= pages[i] %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev carousel-chevron" href="#carousel<%= id %>Controls" role="button" data-slide="prev">
    <i class="fas fa-chevron-left text-dark floating-left h2"></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next carousel-chevron" href="#carousel<%= id %>Controls" role="button" data-slide="next">
    <i class="fas fa-chevron-right text-dark floating-right h2"></i>
    <span class="sr-only">Next</span>
  </a>
</div>
