<div id="about" class="page-card overflow-hidden">
  <div class="profile-card p-3 bg-light border border-secondary d-flex flex-column justify-content-between">
    <div>
      <h2>Kochapas Santibut</h2>
      <div class="mt-2" style="width: max-content;">
        <%= render('shared/button-expand', btn_icon: raw('<i class="fas fa-envelope"></i>'), btn_label: 'kochapas@outlook.com') %>
        <%= render('shared/button-expand', btn_icon: raw('<i class="fas fa-map-marker-alt"></i>'), btn_label: 'Tokyo,Japan') %>
        <%= render('shared/button-expand', btn_icon: raw('<i class="fab fa-linkedin-in"></i>'), btn_label: 'kochapas', btn_link: 'https://www.linkedin.com/in/kochapas') %>
